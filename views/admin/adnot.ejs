  <div class="container-form">
    <h2>ADD NEW NOTICES</h2>
    <div class="form-align">
      <form method="POST">
        <div class="mb-3">
          <label for="Date" class="form-label">Date</label>
          <input required name="date" type="date" class="form-control" id="Date">
        </div>
        <div class="mb-3">
          <label for="Title" class="form-label">Subject</label>
          <input required name="subject" type="text" class="form-control" id="Title">
        </div>
        <div class="mb-3">
          <label for="Title" class="form-label">Details</label>
          <textarea name="details" id="" cols="100" rows="5"></textarea>
          <!-- <input required type="text" class="form-control" id="Title"> -->
        </div>
        <!-- <div class="mb-3">
            <label for="File" class="form-label">File(.pdf file)</label>
            <input type="file" class="form-control" id="File">
          </div> -->
        <div class="col-md-12 text-center">
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <div class="content">
    <h3>PREVIOUS NOTICES</h3>
    <div class="table-responsive">
      <table class="table table-hover table-borderless">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Subject</th>
            <th scope="col">Details</th>
          </tr>
        </thead>
        <tbody>
          <% if (notices.length) { %>
            <% for (const notice of notices) { %>
              <tr>
                <td>
                  <%- notice.date.toLocaleString().split(",")[0] %>
                </td>
                <td>
                  <%- notice.subject %>
                </td>
                <td>
                  <%- notice.details %>
                </td>
              </tr>
              <% } %>
                <% } %>

        </tbody>
      </table>
    </div>
  </div>

