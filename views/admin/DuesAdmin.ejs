<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>(Admin)Dues Page</title>
  <link rel="icon" href="./round_apartment_black_24dp.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/dues.css">
</head>

<body>

  <div class="logo" style="color: #00A0AA; background-color: white;">
    <h2>Wevolve</h2>
    <div class="img">
      <img src="./building.png" height="150px" width="200px">
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #00A0AA;">
    <div class="container-fluid">
      <a class="nav-link" href="/admin/homepage">HOME</a>
      <a class="nav-link" id="active" href="/admin/dues">DUES</a>
      <a class="nav-link" href="/admin/notices">NOTICES</a>
      <a class="nav-link" href="/admin/complaints">COMPLAINTS</a>
      <a class="nav-link" href="/admin/permissions">PERMISSION</a>
      <a class="nav-link" href="/admin/addUser">RESIDENTS</a>
      <a class="nav-link" href="/admin/documents">DOCUMENTS</a>
      <div class="dropdown">
        <img src="/images/residents(admin)/baseline_person_white_24dp.png" height="30px" id="dropdownMenuButton1"
          data-bs-toggle="dropdown" aria-expanded="false">
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      </div>

    </div>
  </nav>

  <div class="container-form">
    <h2>ADD NEW DUE</h2>
    <div class="form-align">
      <form method="POST">

        <div class="mb-3">
          <label for="Bill Name" class="form-label">Bill Name</label>
          <input type="text" name="name" class="form-control" id="Bill">
        </div>

        <div class="mb-3">
          <label for="Amount" class="form-label">Amount</label>
          <input type="number" name="amount" min="0" class="form-control" id="Amount">
        </div>
        <div class="mb-3">
          <label for="Due Date" class="form-label">Due Date</label>
          <input type="date" name="dueDate" class="form-control" id="Due Date">
        </div>
        <div class="col-md-12 text-center">
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <div class="content">
    <div class="table-responsive">
      <table class="table table-hover table-borderless">
        <thead>
          <tr>
            <th scope="col">Issue Date</th>
            <th scope="col">Bill Name</th>
            <th scope="col">Amount</th>
            <th scope="col">Due Date</th>
          </tr>
        </thead>
        <tbody>
          <% if (dues.length) { %>
            <% for (const due of dues) { %>
              <tr>
                <td>
                  <%- due.date.toLocaleString().split(",")[0] %>
                </td>
                <td>
                  <%- due.name %>
                </td>
                <td>
                  <%- due.amount %>
                </td>
                <td>
                  <%- due.dueDate.toLocaleString().split(",")[0] %>
                </td>
              </tr>
              <% } %>
                <% } %>

        </tbody>
      </table>

    </div>
  </div>

  <div class="back-button">
    <div class="col-md-12 text-center">
      <button type="button" class="btn">BACK</button>
    </div>
  </div>

  <footer>
    <div class="card" id="pagefooter">
      <div class="card-body" id="footerbody">
        <h1 class="card-title" id="footertitle">Get In Touch</h1>
        <p class="card-text" id="footertext">To learn more and for further enquiries</p>
        <h4><a href="#">Click Here</a></h4>
        <div class="footerimg">
          <img src="/images/residents(admin)/Up arrow.png" alt="arrow" height="40px">
        </div>
      </div>
      <div class="card-footer" id="footerend">
        <h5>Contact: +917303209630 </h5>
        <div class="footerimageslogo">
          <a href="#"><img src="/images/residents(admin)/youtube-logo-.png" height="35px"></a>
          <a href="#"><img src="/images/residents(admin)/logo-instagram-.png" height="35px"></a>
          <a href="#"><img src="/images/residents(admin)/logo-twitter-.png" height="35px"></a>
          <a href="#"><img src="/images/residents(admin)/facebook logo.png" height="35px"></a>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
    crossorigin="anonymous"></script>
</body>

</html>